@model IEnumerable<Employees.Models.UserVM.UserPreviewVM>

@{
    ViewData["Title"] = "Пользователи";
}

<div>
    <h4>Список пользователей</h4>
</div>

<div>
    <a asp-action="Create">Добавить нового</a>
    <br /><br />
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th style="width:50%;"></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td></td>
            <td>
                <div style="display:flex; flex-direction:row;">
                @Html.ActionLink("Изменить", "Edit", new
                {
                    id = item.Id
                }, new { @class = "btn btn-link" })
                
                @Html.ActionLink("Просмотр", "Details", new
                {
                    id = item.Id
                    }, new { @class = "btn btn-link" })
                
                @using (Html.BeginForm("Delete", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", item.Id)
                    <button class="btn btn-link">Удалить</button>
                }
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
